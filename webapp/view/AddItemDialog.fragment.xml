	    </content>
	     <beginButton>
		   	<Button 
			 id = "addDialogButton"
			 text  = "Add"
			 press = ".onAddItemLocal"
			 class = "sapUiSmallMarginEnd"
			 type = "Emphasized"/>
		 </beginButton>
	    <endButton>
		   	<Button 
			 id = "closeDialogButton"
			 text  = "Close"
			 press = ".onCloseAddItemDialog"
			 class = "sapUiSmallMarginEnd"
			 type = "Transparent"/>
		 </endButton>
   	</Dialog>
